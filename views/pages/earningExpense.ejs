
<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head') %>
</head>
<body class="container">

<header>
    <%- include ('../partials/header') %>
</header>

<main>
   
    <div class="container text-center" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-3 bg-primary card">
            <h3>Earning</h3>
            <p>Rs. 5000</p>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-3 bg-primary card " >
            <h3>Patients</h3>
            <p>100</p>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-3 bg-primary card " >
            <h3>Date</h3>
            <p><%= date %></p>
        </div>
    </div>
    <div class="row" style="margin-top: 30px;">
        <div class="col-sm-6">
            <h3>Earning</h3>
            <form name="earning-form" method="POST" action="">
            <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Amount:<font color="red">*</font></label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="earning" placeholder="Amount Rs." required name="earning">
                    </div>
            </div>
            <div class="form-group row ">
                <div class="col-sm-4"></div>
                <div class="col-sm-4"><button type="submit" class="btn btn-success" >Submit</button></div>
            </div>
        </form>
        </div>
        <div class="col-sm-6">
            <h3>Expense</h3>
            <form name="expense-form" method="POST" action="">
                <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Expense:<font color="red">*</font></label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="expense" placeholder="Expense Rs." required name="expense">
                        </div>
                </div>
                <div class="form-group row ">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4"><button type="submit" class="btn btn-success" >Submit</button></div>
                </div>
            </form>
        </div>
    </div>

   
    </div>
</main>

<footer style="margin-top: 30px;">
    <%- include ('../partials/footer') %>
</footer>
<script>
    $(document).ready(function() {
 $('#example').DataTable();
 $('#daily_stats_table').DataTable();
 $('#montly_stats_table').DataTable();
 } );
</script>
</body>
</html>